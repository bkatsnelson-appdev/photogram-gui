<h1>List of photos</h1>

<form action="/insert_photo">
  <label for="image_box">Image</label>
  <input id="image_box" name="query_image">
  <label for="caption_box">Caption</label>
  <textarea id="caption_box" name="query_caption"> </textarea>
  <label for="owner_id_box">Owner ID</label>
  <input id="owner_id_box" name="query_id">

  <button>Add photo</button>
</form>


<table border="1">
  <tr>
    <th>Image</th>
    <th>Caption</th>
    <th>Owner</th>
    <th>Posted</th>
    <th> </th>
  </tr>

  <% @list_of_photos.each do |photo|%>
  <tr>
    <td><img src="<%=photo.image%>"></td>
    <td><%=photo.caption%><td>
    <td><%=photo.poster.username%></td>
    <td><%=photo.created_at%></td>
    <td><a href = "/photos/<%=photo.id%>">Show details</a></td>
  </tr>
  <%end%>
</table>
